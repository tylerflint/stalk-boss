#!/usr/bin/env ruby

require 'stalker'

STDERR.sync = STDOUT.sync = true

require  File.expand_path('../../lib/stalk_boss', __FILE__)
include StalkBoss

usage = "stalk_boss <stalk_boss_config.rb>"
file = ARGV.shift or abort usage

file = "./#{file}" unless file.match(/^[\/.]/)

require file

trap('INT') do
	puts "\rExiting"
	term
	exit
end

trap('QUIT') do
	soft_quit
end

trap('USR2') do
	soft_quit
  start
end

start

# go to sleep forever!
sleep